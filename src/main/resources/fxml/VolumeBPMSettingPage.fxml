<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="130.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.iaksh.cluster.ui.VBPMSettingPageController">
   <children>
      <HBox prefHeight="20.0" prefWidth="300.0" />
      <HBox prefHeight="30.0" prefWidth="300.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="50.0" />
            <Label text="BPM">
               <graphic>
                  <TextField fx:id="bpmTextField" promptText="(0,400]" />
               </graphic>
            </Label>
            <VBox prefHeight="50.0" prefWidth="50.0" />
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="300.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="50.0" />
            <Label text="音量">
               <graphic>
                  <TextField fx:id="volumeTextField" promptText="[0,100]" />
               </graphic>
            </Label>
            <VBox prefHeight="50.0" prefWidth="50.0" />
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="130.0" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="保存" />
            <VBox prefHeight="50.0" prefWidth="50.0" />
         </children>
      </HBox>
   </children>
</VBox>
